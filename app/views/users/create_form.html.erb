ユーザ登録するよ

<% if @error_message %>
    <div class="form-error">
        <%= @error_message %>
    </div>
<% end %>

<%= form_tag("/users/create") do %>
    <p>ユーザー名</p>
    <input name="user_name" value="<%= @user_name %>">
    <p>パスワード</p>
    <input type="password" name="password" value="<%= @password %>">
    <input type="submit" value="新規登録">
<% end %>