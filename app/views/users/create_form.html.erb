<% if @error_message %>
    <div class="form-error">
        <%= @error_message %>
    </div>
<% end %>

<div class="container">
    <div class="box-heading">
        ユーザ登録
    </div>
    <div class="box-body">
        <%= form_tag("/users/create") do %>
            <div class="form-group">
                <label>ユーザ名</label>
                <input name ="user_name" value="<%= @user_name %>" class="form-control bootstrap-form">
            </div>
            <div class="form-group">
                <label>パスワード</label>
                <input type="password" name ="password" value="<%= @password %>" class="form-control bootstrap-form">
            </div>
            <input type="submit" value="新規登録" class="btn btn-default">
        <% end %>
    </div>
</div>